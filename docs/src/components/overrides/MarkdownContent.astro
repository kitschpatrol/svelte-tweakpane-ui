---
// Adds component data to components pages, if available

import StarlightMarkdownContent from '@astrojs/starlight/components/MarkdownContent.astro'
import Component from '../docs/Component.astro'

const { componentData } = Astro.locals.starlightRoute.entry.data
---

<StarlightMarkdownContent>
	{
		componentData ? (
			<Component {componentData}>
				<slot />
			</Component>
		) : (
			<slot />
		)
	}
</StarlightMarkdownContent>
